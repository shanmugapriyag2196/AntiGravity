{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/posts",
            "destination": "/api/posts.js"
        },
        {
            "source": "/api/post-actions/(.*)",
            "destination": "/api/post-actions.js?id=$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}